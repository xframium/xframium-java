<?xml version="1.0" encoding="UTF-8"?>
<suite xmlns="http://www.xframium.org/testRegistry" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.xframium.org/testRegistry http://www.xframium.org/xsd/pageManagement/testRegistry.xsd">
  <model>
    
    <page name="home" />

  </model>

  <function name="kw-attribute" active="true">
    
    <step type="ATTRIBUTE" name="toggleButton" page="home" >
      <parameter type="STATIC" value="button" />
      <parameter type="STATIC" value="type" />
    </step>
    
    <step type="ATTRIBUTE" name="toggleButton" page="home" context="attributeValue">
      <parameter type="STATIC" value="type" />
    </step>
    
    <step type="COMPARE" name="attributeCompare" page="home">
      <parameter type="STATIC" value="button" />
      <parameter type="CONTEXT" value="attributeValue" />
    </step>
    
    <step type="ATTRIBUTE" name="toggleButton" page="home" >
      <parameter type="STATIC" value="rgba(38, 90, 136, 1)" />
      <parameter type="STATIC" value="STYLE.background-color" />
    </step>
    
    <step type="ATTRIBUTE" name="toggleButton" page="home" context="attributeStyleValue">
      <parameter type="STATIC" value="STYLE.background-color" />
    </step>
    
    <step type="COMPARE" name="attributeCompare" page="home">
      <parameter type="STATIC" value="rgba(38, 90, 136, 1)" />
      <parameter type="CONTEXT" value="attributeStyleValue" />
    </step>
    

  </function>

</suite>
